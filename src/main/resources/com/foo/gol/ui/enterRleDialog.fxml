<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.foo.gol.ui.EnterRleDialogController">
	<center>
		<TextArea fx:id="rlePatternField" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
			</BorderPane.margin>
		</TextArea>
	</center>
	<top>
		<HBox prefHeight="42.0" prefWidth="600.0" spacing="8.0" BorderPane.alignment="CENTER">
			<children>
				<Label prefHeight="25.0" text="Name: " />
				<TextField fx:id="nameField" prefHeight="25.0" prefWidth="357.0" />
			</children>
			<padding>
				<Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
			</padding>
		</HBox>
	</top>
	<bottom>
		<HBox alignment="BOTTOM_RIGHT" prefHeight="37.0" prefWidth="600.0" spacing="8.0" BorderPane.alignment="BOTTOM_CENTER">
			<children>
				<Button fx:id="saveAsButton" mnemonicParsing="false" onAction="#onSaveAsButtonClicked" prefWidth="80.0" text="Save As..." />
				<Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClicked" prefWidth="80.0" text="Cancel" />
				<Button fx:id="okButton" mnemonicParsing="false" onAction="#onOkButtonClicked" prefWidth="80.0" text="OK" />
			</children>
			<padding>
				<Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
			</padding>
		</HBox>
	</bottom>
</BorderPane>
